{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pigeon App",
  "version": "0.1.0",
  "identifier": "com.furka.pigeon-app",
  "build": {
    "frontendDist": "../.svelte-kit/output/client",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pigeon App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.png",
      "icons/favicon.ico"
    ],
    "copyright": "Copyright Â© 2024-2025 BenimFurka. Licensed under GPL-v3.0.",
    "publisher": "BenimFurka",
    "category": "SocialNetworking"
  }
}
