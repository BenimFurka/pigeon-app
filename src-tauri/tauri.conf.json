{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "PORT=1420 npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../public"
  },
  "package": {
    "productName": "pigeon-app",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "request": true
      },
      "protocol": { 
        "asset": true 
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Pigeon App",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.furka.pigeon-app",
      "icon": [
        "icons/favicon.png",
        "icons/favicon.ico"
      ],
      "copyright": "Copyright Â© 2024-2025 BenimFurka. Licensed under GPL-v3.0.",
      "publisher": "BenimFurka",
      "category": "SocialNetworking"
    }
  }
}
