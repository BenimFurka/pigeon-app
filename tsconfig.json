{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./public/build",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/@types/**/*"],
  "exclude": ["node_modules/*"],
  "typeRoots": ["./node_modules/@types", "./src/@types"]
}